pkgname=ghettotooth
pkgver=latest
pkgrel=1
pkgdesc="Ghettodriving for bluetooth"
url="http://www.oldskoolphreak.com/tfiles/ghettotooth.txt"
groups=('archpwn' 'archpwn-bluetooth')
license=('GPL')
depends=('perl')
arch=(any)
source=(http://www.oldskoolphreak.com/tfiles/ghettotooth.txt)
md5sums=('ce96e17ad45938fd03cbad8aa8fcb133')

build() {
  cd "$srcdir/"
  sed -i 's:/usr/bin/perl:/usr/bin/env perl:' ghettotooth.txt
  install -Dm755 ghettotooth.txt $pkgdir/usr/bin/ghettotooth.pl
}

