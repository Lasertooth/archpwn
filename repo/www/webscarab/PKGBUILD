pkgname=webscarab
pkgver=20070504.1631 
pkgrel=1
pkgdesc="Framework for analysing applications that communicate using the HTTP and HTTPS protocols"
arch=('i686' 'x86_64')
url="http://www.owasp.org/index.php/Category:OWASP_WebScarab_Project"
groups=('archpwn' 'archpwn-www')
license=('unknown')
depends=('java-environment')
source=(http://downloads.sourceforge.net/sourceforge/owasp/$pkgname-selfcontained-${pkgver/./-}.jar
webscarab.sh)
noextract=($pkgname-selfcontained-${pkgver/./-}.jar)
md5sums=('10d684be81d8a17d3a57fbc44c4bee7d'
         '855f4e518304332af710d40b52898889')

build() {
  mkdir -p "$pkgdir/usr/share/$pkgname"
  mkdir -p "$pkgdir/usr/bin"
  install -m 755 $srcdir/webscarab.sh $pkgdir/usr/bin/$pkgname
  mv $srcdir/$pkgname-selfcontained-${pkgver/./-}.jar $pkgdir/usr/share/$pkgname/$pkgname.jar
}

