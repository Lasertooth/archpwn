# Contributor: Simon Busch <morphis@gravedo.de>
# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=ratproxy
pkgver=1.53
pkgrel=1
pkgdesc="A passive web application security assessment tool"
url="http://code.google.com/p/ratproxy/"
license=('APACHE')
arch=('i686' 'x86_64')
groups=('archpwn' 'archpwn-www' 'archpwn-scanners')
source=(http://ratproxy.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('515ded853cd489cd894162fcf8e069d9')

build() {
	cd $srcdir/ratproxy
	make || return 1

    install -d $pkgdir/usr/bin
    install -d $pkgdir/usr/share/doc/$pkgname

	install -m755 ratproxy $pkgdir/usr/bin/ratproxy || return 1
	install -m755 ratproxy-report.sh $pkgdir/usr/bin/ratproxy-report.sh || return 1
    cp doc/* $pkgdir/usr/share/doc/$pkgname/ || return 1
}
