pkgname=sipcrack
_pkgname=SIPcrack
pkgver=0.2
pkgrel=1
pkgdesc="SIPcrack is a SIP protocol login cracker."
url="http://www.remote-exploit.org/codes_sipcrack.html"
updateurl="http://www.remote-exploit.org/codes_sipcrack.html=>SIPcrack-"
license=(custom)
groups=('archpwn' 'archpwn-bruteforce' 'archpwn-password' 'archpwn-sniffer')
arch=(i686 x86_64)
source=(http://www.remote-exploit.org/codes/sipcrack/$_pkgname-$pkgver.tar.gz
        LICENSE)
md5sums=('4a768bbd2e7df3ea7ced2e9f3d60698a'
         '80f9899bc5977147c1a18108e7d39339')

build() {
  cd $startdir/src/$_pkgname-$pkgver
  make || return 1
  install -D -m755 sipcrack $pkgdir/usr/bin/sipcrack
  install -D -m755 sipdump  $pkgdir/usr/bin/sipdump
  install -D -m644 $srcdir/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
