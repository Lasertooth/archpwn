# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=snmpscan
pkgver=0.1
pkgrel=1
pkgdesc="snmpscan is a free, multi-processes SNMP scanner"
url="http://www.nothink.org/perl/snmpscan.html"
updateurl="http://www.nothink.org/perl/snmpscan.html=>snmpscan-"
groups=('archpwn' 'archpwn-enumeration')
license=('GPL')
arch=(any)
depends=('perl' 'perl-net-snmp' 'perl-net-ip' 'perl-net-scan-fork')
source=(http://www.nothink.org/perl/snmpcheck/download/$pkgname-$pkgver.txt)

build() {
  cd "$srcdir"
  install -Dm755 $pkgname-$pkgver.txt $pkgdir/usr/bin/$pkgname.pl || return 1
  chown root:root $pkgdir/usr/bin/$pkgname.pl || return 1
}

# vim:set ts=2 sw=2 et:
