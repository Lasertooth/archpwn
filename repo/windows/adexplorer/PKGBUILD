# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=adexplorer
pkgver=1.4
pkgrel=1
pkgdesc="Active Directory Explorer (AD Explorer) is an advanced Active Directory (AD) viewer and editor."
url="http://technet.microsoft.com/en-us/sysinternals/bb963907.aspx"
groups=('archpwn' 'archpwn-windows')
arch=(any)
license=(SYSINTERNALS)
source=(http://download.sysinternals.com/Files/AdExplorer.zip)
md5sums=('cf1c655ea61081c07dcf61e0a53a23a9')

build() {
  cd "$srcdir"
  install -d $pkgdir/opt/windows/$pkgname-$pkgver/
  for f in *.txt *.exe *.chm; do
    install -Dm644 $f $pkgdir/opt/windows/$pkgname-$pkgver/$i
  done
}

# vim:set ts=2 sw=2 et:
