# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=autoruns
pkgver=10.01
pkgrel=1
pkgdesc="Autorun startup monitor"
url="http://technet.microsoft.com/en-us/sysinternals/bb963902.aspx"
groups=('archpwn' 'archpwn-windows')
arch=(any)
license=(SYSINTERNALS)
source=(http://download.sysinternals.com/Files/Autoruns.zip)
md5sums=('3c21fc34dd35be361d11955ec603116d')

build() {
  cd "$srcdir"
  install -d $pkgdir/opt/windows/$pkgname/
  for f in *.exe *.chm *.txt; do
    install -Dm644 $f $pkgdir/opt/windows/$pkgname/$f
  done
}

# vim:set ts=2 sw=2 et:
