# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=process-explorer
pkgver=12.04
pkgrel=1
pkgdesc="Process Explorer shows you information about which handles and DLLs processes have opened or loaded."
url="http://technet.microsoft.com/en-us/sysinternals/bb896653.aspx"
groups=('archpwn' 'archpwn-windows')
arch=(any)
license=(SYSINTERNALS)
source=(http://download.sysinternals.com/Files/ProcessExplorer.zip)
md5sums=('21bdfb89084d1831e03c9c0dc8cb09a0')

build() {
  cd "$srcdir"
  install -d $pkgdir/opt/windows/$pkgname/
  for f in *.exe *.chm *.txt; do
    install -Dm644 $f $pkgdir/opt/windows/$pkgname/$f
  done
}

# vim:set ts=2 sw=2 et:
