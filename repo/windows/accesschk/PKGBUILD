# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=accesschk
pkgver=5.0
pkgrel=1
pkgdesc="Check access permission for registry keys, global objects and windows services"
url="http://technet.microsoft.com/en-us/sysinternals/bb664922.aspx"
groups=('archpwn' 'archpwn-windows')
arch=(any)
license=(SYSINTERNALS)
source=(http://download.sysinternals.com/Files/accesschk.zip)
md5sums=('ea2fa8f79df71f4d4c788467014acf18')

build() {
  cd "$srcdir"
  install -d $pkgdir/opt/windows/$pkgname/
  for f in *.exe *.txt; do
    install -Dm644 $f $pkgdir/opt/windows/$pkgname/$f
  done
}

# vim:set ts=2 sw=2 et:
