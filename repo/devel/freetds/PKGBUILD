# Contributor: Aaron Malone <aaron@munge.net>
pkgname=freetds
pkgver=0.64
pkgrel=1
pkgdesc="Library for accessing Sybase and MS SQL Server databases"
url="http://www.freetds.org"
arch=(i686 x86_64)
license="LGPL"
depends=(unixodbc)
makedepends=()
conflicts=()
replaces=()
backup=(etc/freetds/freetds.conf etc/freetds/locales.conf etc/freetds/pool.conf)
source=(ftp://ftp.ibiblio.org/pub/Linux/ALPHA/freetds/old/$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('ecfee5d6c96932172a1f29fb215c9d23')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc/freetds --with-tdsver=7.0
  make || return 1
  make DESTDIR=$startdir/pkg install
  find $startdir/pkg -name '*.la' -exec rm {} \;
}
