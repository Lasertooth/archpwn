pkgname=pymssql
pkgver=1.0.0
pkgrel=1
pkgdesc="Simple MSSQL Python extension module"
arch=(i686 x86_64)
url="http://pymssql.sourceforge.net"
license=('LGPL')
depends=('python' 'freetds')
source=(http://downloads.sourceforge.net/pymssql/$pkgname-$pkgver.tar.gz)
md5sums=('8bea87559fd4bfd651acea3a03f46b6f')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  sed -i 's|WRITE_RESTRICTED|PY_WRITE_RESTRICTED|g' $srcdir/$pkgname-$pkgver/mssqldbmodule.c
  python ./setup.py install --root=$pkgdir
}

