# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=perl-text-csv-xs
pkgver=0.58
pkgrel=1
pkgdesc="Fast 8bit clean version of Text::CSV"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~HMBRAND/Text-CSV_XS"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/H/HM/HMBRAND/Text-CSV_XS-$pkgver.tgz) 
md5sums=('0a60b6423f752220716dc0672b482055')

build() {
  cd  $startdir/src/Text-CSV_XS-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
