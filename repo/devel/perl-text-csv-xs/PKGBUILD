pkgname=perl-text-csv-xs
pkgver=0.68
pkgrel=1
pkgdesc="Fast 8bit clean version of Text::CSV"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~HMBRAND/Text-CSV_XS"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/H/HM/HMBRAND/Text-CSV_XS-$pkgver.tar.gz) 
md5sums=('be6b24649b7830791fa5d069d8b3881c')

build() {
  cd  $srcdir/Text-CSV_XS-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$pkgdir || return 1
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
