# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=wx-propertygrid
_pkgname=wxpropgrid
pkgver=1.4.3
pkgrel=1
pkgdesc="A property sheet control for wxWidgets"
url="http://wxpropgrid.sourceforge.net"
license=('GPL')
arch=('i686' 'x86_64')
depends=('wxgtk')
makedepends=('gcc' 'wxgtk')
source=(http://prdownloads.sourceforge.net/wxpropgrid/${_pkgname}-${pkgver}-src.tar.gz)
md5sums=('25bb8436665d3bddf36bbb737a31d3b2')

build() {
  cd "$srcdir/propgrid"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

