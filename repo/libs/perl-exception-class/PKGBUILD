pkgname=perl-exception-class
_cpanname=Exception-Class
pkgver=1.31
pkgrel=1
pkgdesc="Declare exception class hierarchies"
arch=('any')
url="http://search.cpan.org/~DROLSKY/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0' 'perl-devel-stacktrace>=1.20' 'perl-class-data-inheritable>=0.02')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/D/DR/DROLSKY/${_cpanname}-${pkgver}.tar.gz) 
md5sums=('4d63761ae3b12f94e11591f8ab021f1a')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$pkgdir || return 1
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
