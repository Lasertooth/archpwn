pkgname=perl-netpacket
_cpanname=NetPacket
pkgver=0.43.1
pkgrel=1
pkgdesc="User Datagram Protocol"
arch=('any')
url="http://search.cpan.org/~YANICK/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl')
makedepends=('perl-module-build>=0.3601')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/Y/YA/YANICK/${_cpanname}-${pkgver}.tar.gz) 
md5sums=('aaae1556f4ad1974e41152e5a4e70095')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Build.PL
  sed -i 's/ 0.3601//' Build.PL
  perl Build.PL installdirs=vendor destdir=$pkgdir || return 1    
  perl Build || return 1
  perl Build install || return 1
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
