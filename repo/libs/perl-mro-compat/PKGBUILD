pkgname=perl-mro-compat
_cpanname=MRO-Compat
pkgver=0.11
pkgrel=1
pkgdesc="MRO::Compat"
arch=('any')
url="http://search.cpan.org/~FLORA/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl-class-c3>=0.20' 'perl>=5.10.0')
makedepends=('perl-extutils-makemaker>=6.42')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/F/FL/FLORA/${_cpanname}-${pkgver}.tar.gz) 
md5sums=('462b68631d5bef8c807190f1c5c17306')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$pkgdir || return 1
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
