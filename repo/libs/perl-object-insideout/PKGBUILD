pkgname=perl-object-insideout
_cpanname=Object-InsideOut
pkgver=3.67
pkgrel=1
pkgdesc="Comprehensive inside-out object support"
arch=('any')
url="http://search.cpan.org/~JDHEDDEN/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl-exception-class>=1.29')
makedepends=('perl-extutils-makemaker')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/J/JD/JDHEDDEN/${_cpanname}-${pkgver}.tar.gz) 
md5sums=('1583d828e02cbba543709f3ec9467385')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$pkgdir || return 1
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
