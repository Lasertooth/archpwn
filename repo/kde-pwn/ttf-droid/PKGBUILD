# Contributor: Urs Wolfer <uwolfer @ fwo.ch>

pkgname=ttf-droid
pkgver=200810
pkgrel=1
pkgdesc="A font created by Ascender Corporation for use by the Open Handset Alliance platform, Android."
arch=('i686' 'x86_64')
license=('apache')
url="http://code.google.com/android/"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=ttf.install
source=(http://download.damieng.com/fonts/redistributed/DroidFamily.zip)
md5sums=('5de3bfba5dd8d00e1ec884ca36b31529')

build() {
  cd $srcdir/DroidFonts

  install -d $pkgdir/usr/share/fonts/TTF/
  install -m644 *.ttf $startdir/pkg/usr/share/fonts/TTF/ || return 1
}
