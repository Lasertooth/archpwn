# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=sqlmap
pkgver=0.7
pkgrel=1
pkgdesc='sqlmap is an automatic SQL injection tool developed in Python'
url='http://sqlmap.sourceforge.net'
license=('GPL')
arch=(any)
groups=('archpwn' 'archpwn-scanners' 'archpwn-www' 'archpwn-database')
depends=('python')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('edb1a625fb18b0b8aae2fc15a66a055e')

build() {
  install -d $pkgdir/usr/bin
  install -d $pkgdir/usr/share/$pkgname

  cp -ax $srcdir/$pkgname-$pkgver/* $pkgdir/usr/share/$pkgname
  cat > $pkgdir/usr/bin/sqlmap << EOF
#!/bin/bash
cd /usr/share/$pkgname
python sqlmap.py \$*
EOF
  chmod 0755 ${pkgdir}/usr/bin/sqlmap
}
